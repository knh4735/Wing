<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".SignActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="40sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="아이디"
            />
        <EditText
            android:id="@+id/idEt"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:maxLines="1"
            android:ems="10"
            android:textSize="20sp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/checkDupBtn"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="중복확인"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:text="비밀번호"
            />
        <EditText
            android:id="@+id/pwEt"
            android:layout_width="0dp"
            android:maxLines="1"
            android:layout_weight="6"
            android:textSize="20sp"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:text="비밀번호 확인"
            />
        <EditText
            android:id="@+id/confirmPwEt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textSize="20sp"
            android:maxLines="1"
            android:layout_height="40dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/noticePwStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="이름"
            />
        <EditText
            android:id="@+id/nameEt"
            android:hint="홍길동"
            android:ems="10"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textSize="20sp"
            android:layout_height="40dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/noticeNameStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="닉네임"
            />
        <EditText
            android:id="@+id/nicknameEt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:ems="10"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_height="40dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/noticeNicknameStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="이메일"
            />
        <EditText
            android:id="@+id/emailEt"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="abcd@efgh.kij"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textSize="20sp"
            android:layout_height="40dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/noticeemailStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="자기소개"
            />
        <EditText
            android:id="@+id/selfEt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:ems="120"
            android:maxLines="8"
            android:textSize="15sp"
            android:layout_height="118dp" />

    </LinearLayout>

    <Button
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="가입"/>
</LinearLayout>